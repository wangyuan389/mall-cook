{
  "name": "mall-cook",
  "private": false,
  "version": "0.0.0",
  "author": "June",
  "main": "src/main/main.js",
  "scripts": {
    "dev:app": "concurrently \"npm run dev\" \"npm run start\" ",
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "start": "nodemon --exec electron . --watch ./ --ext .js,.html,.scss,.vue,.ts,.css",
    "app:dir": "electron-builder --dir",
    "app:build": "electron-builder",
    "electron:build": "vue-tsc && vite build && electron-builder --mac --windows",
    "electron:build_win": "vue-tsc && vite build && electron-builder --windows",
    "electron:build_mac": "vue-tsc && vite build && electron-builder --mac"
  },
  "build": {
    "appId": "com.mallcook.app",
    "productName": "MallCook",
    "win": {
      "icon": "./public/icon.ico",
      "artifactName": "${productName}.${ext}"
    },
    "files": [
      "./**/*"
    ],
    "directories": {
      "output": "build_electron"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "./public/icon.ico",
      "uninstallerIcon": "./public/icon.ico",
      "installerHeaderIcon": "./public/icon.ico",
      "shortcutName": "MallCook"
    }
  },
  "config": {
    "electron": {
      "mirror": "https://registry.npmmirror.com/-/binary/electron/"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "axios-shortcut": "^0.1.3",
    "compression-webpack-plugin": "5.0.1",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.3",
    "dom-to-image": "^2.6.0",
    "electron-is-dev": "^2.0.0",
    "electron-window-state": "^5.0.3",
    "element-ui": "^2.15.13",
    "element-verify": "^0.2.3",
    "faim": "^0.6.2",
    "jr-qrcode": "^1.1.4",
    "js-cookie": "^3.0.0",
    "lodash": "^4.17.21",
    "lru-cache": "^6.0.0",
    "mammoth": "^1.4.21",
    "moment": "^2.29.4",
    "postcss-plugin-px2rem": "^0.8.1",
    "tinymce": "^6.8.2",
    "vue": "^2.7.8",
    "vue-json-viewer": "^2.2.19",
    "vue-router": "^3.5.2",
    "vuedraggable": "^2.24.3",
    "vuex": "^3.4.0",
    "web-storage-cache": "^1.1.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "weixin-js-sdk": "^1.6.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^23.1.3",
    "electron-builder": "^23.6.0",
    "nodemon": "^2.0.20",
    "sass": "^1.56.1",
    "sass-loader": "^13.2.0",
    "typescript": "^4.6.4",
    "vite": "^3.2.3",
    "vite-plugin-vue2": "^2.0.3",
    "vue-tsc": "^1.0.9"
  }
}
